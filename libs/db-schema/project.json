{
  "name": "db-schema",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/db-schema/prisma",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "dependsOn": [
        "^db:types"
      ],
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/libs/db-schema",
        "main": "libs/db-schema/src/index.ts",
        "tsConfig": "libs/db-schema/tsconfig.lib.json",
        "assets": [
          "libs/db-schema/*.md"
        ]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "libs/db-schema/**/*.ts"
        ]
      }
    },
    "db:migrate": {
      "executor": "@nx-tools/nx-prisma:migrate",
      "options": {
        "schema": "libs/db-schema/src/prisma/schema.prisma",
        "tsConfig": "libs/db-schema/tsconfig.lib.json",
        "name": "Tabak-Taste-Migration"
      }
    },
    "db:types": {
      "executor":"@nx-tools/nx-prisma:generate",
      "options": {
        "schema": "libs/db-schema/src/prisma/schema.prisma",
        "tsConfig": "libs/db-schema/tsconfig.lib.json"
      }
    },
    "db:update": {
      "executor": "@nx-tools/nx-prisma:push",
      "options": {
        "schema": "libs/db-schema/src/prisma/schema.prisma",
        "tsConfig": "libs/db-schema/tsconfig.lib.json"
      }
    },
    "db:seed": {
      "executor": "@nx-tools/nx-prisma:seed",
      "options": {
        "tsConfig": "libs/db-schema/tsconfig.lib.json",
        "script": "libs/db-schema/src/prisma/seed.ts",
        "schema": "libs/db-schema/src/prisma/schema.prisma"
      }
    }
  },
  "tags": [
    "type:lib"
  ]
}