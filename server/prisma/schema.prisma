generator client {
  provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Producer {
    id          Int @id @default(autoincrement())
    name        String @unique
    path        String
    tobaccos    Tobacco[]
}

model Tobacco {
    id                  Int @id @default(autoincrement())
    name                String
    tastes              String[]
    producer            Producer @relation(fields: [producerId], references: [id])
    producerId          Int
    amount              Int?
    unit                String?
    price               Float?
    currency            String?
    source              String
    description         String?
    ean                 String?
}